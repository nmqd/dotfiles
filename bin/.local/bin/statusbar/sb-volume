#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

case $BUTTON in
	1) setsid -f "$TERMINAL" -e pulsemixer ;;
	2) pulsemixer --toggle-mute ;;
	4) pulsemixer --change-volume +1 ;;
	5) pulsemixer --change-volume -1 ;;
	3) notify-send "Volume module" "\- Shows volume ï€¨ , ïª€  if muted.
- Middle click to mute.
- Scroll to change." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

[ $(pulsemixer --get-mute) = 1 ] && echo "^c#fb4934^ ïª€ mute ^d^" && exit

vol="$(pulsemixer --get-volume | awk '{ print $1 }')"

if [ "$vol" -gt "70" ]; then
	icon="ï€¨ "
elif [ "$vol" -gt "30" ]; then
	icon="ï©½ "
elif [ "$vol" -gt "0" ]; then
	icon="ï€§ "
else
        echo ïª€ && exit
fi

# echo "$icon$vol%"
echo "^c#fabd2f^ $icon$vol% ^d^"
