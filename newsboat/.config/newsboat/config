auto-reload yes
reload-threads 100
show-read-feeds no

# Keybinding
bind-key j down
bind-key k up
bind-key j next articlelist
bind-key k prev articlelist
bind-key J next-feed articlelist
bind-key K prev-feed articlelist
bind-key G end
bind-key g home
bind-key d pagedown
bind-key u pageup
bind-key l open
bind-key h quit

# Colors
include /usr/share/doc/newsboat/contrib/colorschemes/plain

highlight feedlist "---.*---" yellow default bold
highlight feedlist ".*0/0.." default default invis


# Macros
browser linkhandler
macro , open-in-browser
macro y open-in-browser
# macro y set browser "mpv %u" ; open-in-browser ; set browser linkhandler
